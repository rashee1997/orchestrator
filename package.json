{
  "name": "memory-mcp-server",
  "version": "0.1.0",
  "description": "A Model Context Protocol server for persistent memory management in AI agents using SQLite.",
  "private": true,
  "type": "module",
  "bin": {
    "memory-mcp-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "rimraf build && tsc && node -e \"require('fs').chmodSync('build/index.js', '755'); require('fs').mkdirSync('build/database', { recursive: true }); require('fs').copyFileSync('src/database/schema.sql', 'build/database/schema.sql');\"",
    "start": "node build/index.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "test": "set NODE_OPTIONS=--experimental-vm-modules && jest"
  },
  "dependencies": {
    "@google/genai": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.11.0",
    "@tavily/core": "^0.5.2",
    "ajv": "^8.17.1",
    "axios": "^1.9.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.50",
    "@types/uuid": "^10.0.0",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.4",
    "typescript": "^5.3.3"
  }
}
